{{#if build}}
  <div class="flex flex-wrap py-3">
    <div class="w-1/3">
      <div class="Build-info__label">Branch</div>
      <div class="Build-info__value">{{build.branch}}</div>
    </div>
    <div class="w-1/3">
      <div class="Build-info__label">Sha</div>
      <div class="Build-info__value">{{build.shortSha}}</div>
    </div>
    <div class="w-1/3">
      <div class="Build-info__label">Job</div>
      <div class="Build-info__value">{{build.job}}</div>
    </div>
  </div>
  <div class="flex flex-wrap py-3">
    <div class="w-full">
      <div class="Build-info__label">Deployed</div>
      <div class="Build-info__value">
        {{build.createdAtFormatted}}
      </div>
    </div>
  </div>

{{else}}

  <div class="flex flex-wrap py-3">
    <div class="w-full">
      <div class="Build-info__no-build">
        No active build
      </div>
    </div>
  </div>

{{/if}}
